<resources>
    <style name="AppTheme.titleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
   <!--     <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>-->
        <!--标题栏样式-->
        <item name="titleBarAttr">@style/StyleTitleBar</item>
        <item name="dotIndicatorAttr">@style/StyleDotIndicator</item>
    </style>
    <style name="StyleDotIndicator" parent="defaultDotIndicator">

    </style>
    <!--定义标题栏样式-->
    <style name="StyleTitleBar" parent="defaultTitleBarStyle">
        <!--标题栏高度-->
        <item name="barHeight">48dp</item>
        <item name="barBackground">#3ea1f7</item>
        <item name="barTitleTextSize">22px</item>
        <item name="barTitleTextColor">#FFFFFF</item>
    </style>
</resources>
